			    @Html.EditorFor(model => model.IsPublic)

			    @Html.LabelFor(model => model.IsPublic)
			    @Html.ValidationMessageFor(model => model.IsPublic)
		    </div>
	    </div>

	    <div class="form-group">
		    @Html.LabelFor(model => model.UserCellNumber, new { @class = "control-label col-md-2" })
		    <div class="col-md-10">
			    @Html.EditorFor(model => model.UserCellNumber)

			    @Html.ValidationMessageFor(model => model.UserCellNumber)
		    </div>
	    </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsActive, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                                  @Html.EditorFor(model => model.IsActive)
                @Html.ValidationMessageFor(model => model.IsActive)
