							<img alt="محصولات آقایان" src="/images/final-7.jpg">
						</a>
					</div>
					<div class="product-description">
						<div class="product-title">
							<h3><a href="/category/men">محصولات آقایان</a></h3>
							<a class="btn fullwidth" href="/category/men">مشاهده دسته بندی محصولات و تخفیفات</a>
						</div>
					</div>
				</div>
			</div>

			<div class="col-md-3">
				<div class="product">
					<div class="product-image">
						<a href="/category/gifts">
							<img alt="ست هدیه" src="/images/3c25c6ed8a5e4201963b441e4af2f0c2.jpg">
						</a>
					</div>
					<div class="product-description">
						<div class="product-title">
							<h3><a href="/category/gifts">ست هدیه</a></h3>
							<a class="btn fullwidth" href="/category/gifts">مشاهده دسته بندی محصولات و تخفیفات</a>
						</div>
					</div>
				</div>
			</div>

			<div class="col-md-3">
				<div class="product">
					<div class="product-image">
						<a href="/category/leather-care">
							<img alt="مراقبت از چرم و جیر" src="/images/1786dea72fa342799ccc49f13f59d249.jpg">
						</a>
					</div>
					<div class="product-description">
						<div class="product-title">
							<h3><a href="/category/leather-care">مراقبت از چرم و جیر</a></h3>
							<a class="btn fullwidth" href="/category/leather-care">مشاهده دسته بندی محصولات و تخفیفات</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


<section class="bg-gray" id="branch">
	<div class="container">
		<div class="row ">
			<div class="col-md-12">
				<div>
					<h2>
				فروشگاه های چرم مشهد
					</h2>
					<div class="row">
				
						@foreach (var branch in Model.SiteBranches)
						{
							<div class="col-md-3">
								<div class="branchCity">
									@branch.SiteBranchGroup.Title
								</div>
								<div class="branchCard">

									<div class="branchinfo">
										<div class="branchname">
											شعبه @branch.Title
										</div>
										<div class="branchNumber">
											<i class="fa fa-phone"></i>
											<a href="tel:@branch.Phone.Split('-')[0]">@branch.Phone.Split('-')[0]</a>
										</div>
										<p class="clearfix"></p>
									</div>
								</div>
							</div>
						}

					</div>

			 
					 
				</div>
			</div>
		</div>
	</div>
</section>

 