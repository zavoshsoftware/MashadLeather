@model ViewModels.SpringPromotionViewModel
@{
		ViewBag.Title = "فروش ویژه بهارانه چرم مشهد";
		Layout = "~/Views/Shared/FrontEndLayout/_FrontEndLayout.cshtml";
		ViewBag.Canonical = "https://www.mashadleather.com/spring";
}
@section head{
	<style>
		body {
			
		}
		 .bg-gray {
			 background-color: #efefef;
			 direction: rtl;
			 text-align: right;
			 color: #000
		 }

			.bg-gray h2 {
				text-align: center;
				color: #ED1C24
			}

		.bg-gray ul {
			background-color: #ddd;
			direction: rtl;
			text-align: right;
		}

		.bc-card {
			padding: 15px;
			border: 1px solid #000;
			text-align: center
		}

		.bc-card img {
			margin-bottom: 15px;
		}

		.nextline-row {
			margin-top: 30px;
		}

		.row label {
			min-height: 80px;
		}

		.product-title h3 {
			text-align: center !important;
			margin-bottom: 8px !important;
		}

		.gotodiscount {
			margin-top: 30px !important;
		}

		.gotodiscount a {
			font-size: 1.5rem
		}

		.gotodiscount i {
			margin: 0 30px !important;
		}

		.product-title .btn {
			padding: 12px !important;
			font-size: 1rem;
		}
		#discountsec h2 {
			text-align: center;
			color: #ED1C24;
			direction: rtl;
			margin-bottom: 40px;
		}
		section {
			padding: 40px 0;
		}

		.branchCard {
			padding:20px 10px;
			background-color: #fff;
			margin-bottom: 20px;
		}

		.branchCard p{
		 
			margin-bottom: 0px;
		}

		.branchname {
			float: right;
			color: #ED1C24;
		}
		.branchNumber {
			float: left;
			direction: ltr;
			text-align: left;
			font-size: 0.9rem;
			color: #000;
		}

		.springdesc p {
			text-align: justify;
			margin-bottom: 0;
			color: #464646;
			font-size: 1.35rem;
		line-height: 2.1rem;
		}

			.springdesc p a {
				color: #ED1C24;
			}
			.springdesc p a:hover {
				text-decoration: underline;
			}
		.springdesc h3 {
			margin-top: 1rem;
		}

		.branchCity {
			padding: 10px;
			text-align: center;
			background-color: #ddd;
		}

		.newimg img {
			max-height: 500px;
			margin: 0 auto
		}
	</style>
	
	<meta property="og:title" content="@ViewBag.Title" />
	<meta property="og:url" content="https://www.mashadleather.com/spring" />
	<meta property="og:image" content="https://www.mashadleather.com/images/ml-spring.jpg" />
	<meta property="og:description" content="تخفیفات باورنکردنی برای کلیه محصولات در فروش ویژه بهارانه چرم مشهد" />
}
@section scripts{
	<script src="~/Scripts/UI/plugins/components/particles-animation.js"></script>
	<script src="~/Scripts/UI/plugins/components/particles.js"></script>
	 
}
<section id="page-title" data-parallax-image="/images/mashad-faq-img.jpg">
	<div id="particles-js" class="particles" style="background: none"></div>
	<div class="container">
		<div class="slide-captions text-center text-light about-caption">
			<label>@ViewBag.Title</label>
		</div>
	</div>
</section>

@*<section style="text-align: center;" class="newimg">
	<img src="/images/slider5.jpg" class="img-responsive" />
	
</section>*@
<section class="bg-gray">
	<div class="container">
		<div class="row ">
			<div class="col-md-12">
				<div>
					<h2>
						فروش ویژه بهارانه چرم مشهد آغاز شد.
					</h2>
		
					<div class="row">
						<div class="col-md-4">
							<div class="text-center">
								<img src="~/Images/ml-spring.jpg" class="img-responsive" />
							</div>
						</div>
						<div class="col-md-8 springdesc">
							<h3>همراهان گرامی چرم مشهد</h3>
							<p>چرم مشهد تصمیم گرفته است در آخرین بهار قرن برای شما عزیزان خاطره ای زیبا بیافریند .بدین منظور پیشنهادات ویژه ای روی تمامی محصولات خود برای شما دارد . شرایط شرکت در این بهارانه به شرح زیر است : </p>
							<p>1-	تا 50% تخفیف برروی تمامی کالاها</p>
							<p>2-	از 13 الی 22 خرداد ماه 1400</p>
							<p>3-	امکان استفاده در تمامی <a href="#branch">شعب</a> و فروشگاه اینترنتی</p>
							<p>4-	امکان بهره مندی از 
								<a href="https://www.mashadleather.com/customerclub">باشگاه مشتریان</a></p>
						</div>
					</div>
				
					<div class="gotodiscount">
						<a class="btn fullwidth" href="#discountsec"><i class="fa fa-angle-down"></i>مشاهده تخفیفات<i class="fa fa-angle-down"></i></a>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

