		<section class="p-b-0">
			<div class="container">
				<div class="heading heading-center m-b-40" data-animation="fadeInUp">
					<h2>@Resources.Label.RecentProducts</h2>
				</div>
				<div class="row" data-animation="fadeInUp">
					<div class="grid-layout grid-4-columns" data-item="grid-item">
						@foreach (var product in Model.NewProducts)
						{
								<div class="grid-item">
									<div class="product">
										<div class="product-image">
											<a href="/productQuiockView/@product.Id" data-lightbox="ajax">
												<img alt="@product.Title" src="https://www.mashadleather.com/@product.ImageUrl">
											</a>
											@if (product.HasTag)
											{
													<span class="product-new">@product.TagTitle</span>
}
											<div class="product-overlay">
												<a href="/productQuiockView/@product.Id" data-lightbox="ajax">@Resources.Label.QuickView</a>
											</div>
										</div>
										<div class="product-description">
											<div class="product-category">@product.ProductCategoryTitle</div>
											<div class="product-title">
												<h3><a href="/product-detail/@product.Id">@product.Title</a></h3>
											</div>
											<div class="product-price">
												@if (product.IsInPromotion)
												{
														<del class="price-en">@product.Amount</del>@*<text>ریال</text>*@
														<ins class="price-en">@product.DiscountAmount</ins>
}
												else
												{
														<ins class="price-en">@product.Amount</ins>
}
												@if (Model.CurrentCurrency != "euro")
												{
														<text>@Resources.Label.Rial</text>
}
												else
												{
														<span><i class="fa fa-euro"></i></span>
}
											</div>
										</div>
									</div>
								</div>
						}
					</div>

				</div>
			</div>
		</section>
		@Html.Partial("FrontEndLayout/_MiniFooter")
		<section class="p-b-0">
			<div class="container">
				<div class="grid-layout grid-4-columns" data-item="grid-item">
					@foreach (var productCategory in Model.ProductCategories)
