@model ViewModels.AboutViewModel
@{
		ViewBag.Title =Resources.Label.About + " | " +Resources.Label.MashadLeather;
		ViewBag.Description = "شرکت چرم مشهد در سال 1375 در شهرک صنعتی چرم شهر مشهد با هدف حفظ و ارتقاء ارزش افزوده صنعت چرم و محصولات چرمی، ایجاد اشتغال در داخل کشور، عرضه مستقیم کلیه محصولات چرمی به هموطنان و صادرات با به کارگیری کلیه امکانات و توان بالقوه تاسیس گردیده است.";
		ViewBag.Canonical = "https://www.mashadleather.com/about";
		Layout = "~/Views/Shared/FrontEndLayout/_FrontEndLayout.cshtml";
}

<section id="page-title" data-parallax-image="/images/mashad-faq-img.jpg">
    <div id="particles-js" class="particles" style="background: none"></div>
    <div class="container">
        <div class="slide-captions text-center text-light about-caption">
            <h1 class="strong">@Resources.Label.AboutUs</h1> <label>@Resources.Label.MashadLeather</label>
        </div>
    </div>
</section>
