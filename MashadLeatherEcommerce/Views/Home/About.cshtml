<section>
	<div class="container">
		<div class="row about-main-text">
			@Html.Raw(Model.MainText)
		</div>
	</div>
</section>
<section class="text-light background-overlay-dark" data-parallax-image="/images/About-us.jpg">
	<div class="container">
		<div class="row">
			@foreach (var number in Model.Numbers)
			{
					<div class="col-md-3">
						<div class="text-center">
							<div class="counter">
								<span data-from="0" data-refresh-interval="50" data-seperator="true" data-speed="3000" data-to="@number.SummerySrt"></span>
							</div>
							<p>@number.TitleSrt</p>
						</div>
					</div>
			} 
		</div>
	</div>
</section>
<section>
	<div class="container">
		<div class="heading heading-center"><span class="lead">@Resources.Label.Honors </span> </div><ul class="grid grid-4-columns">
			@foreach (var certificate in Model.Certificates)
			{
					<li><a data-container="body" data-content="@certificate.SummerySrt" data-original-title="@certificate.TitleSrt" data-placement="top" data-toggle="popover" data-trigger="hover" title=""><img alt="@certificate.Title" src="@certificate.ImageUrl" /></a> </li>

			} 		</ul>
	</div>
</section>
<section class="box-fancy section-fullwidth text-light p-b-0 p-t-0" style="direction:rtl;">
	<div class="row">

		@foreach (var text in Model.SaleSystem)
		{
				<div class="col-md-4" style="background-color: #917d5d;">
					<h3>@text.TitleSrt</h3>
					<p class="text-justify">@text.SummerySrt</p>
					<div class="grid-item" style="padding: 0px 30px 30px 0px; position: absolute; left: 585px; top: 790px;">
						<a data-lightbox="gallery-item" href="images/portfolio/project/12.jpg" title="Saiba Chair"><img src="/Theme/MashadLeather/images/portfolio/project/12.jpg" /></a>
					</div>
				</div>
		}


	</div>
</section>
<section>
	<div class="container">
		<div class="heading heading-center"><span class="lead">@Resources.Label.OtherMembers</span> </div>
		@Html.Raw(Model.Partners)
	</div>
</section>

@section scripts{
    <script src="~/Scripts/UI/plugins/components/particles-animation.js"></script>
    <script src="~/Scripts/UI/plugins/components/particles.js"></script>
}