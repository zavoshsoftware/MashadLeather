@model ViewModels.BlackFridayViewModel
@{
		ViewBag.Title = "فروش ویژه بهمن ماه چرم مشهد ";
		Layout = "~/Views/Shared/FrontEndLayout/_FrontEndLayout.cshtml";
		ViewBag.Canonical = "https://www.mashadleather.com/winterpromotion";
}
@section head{
	<style>
		body {
			
		}
		 .bg-gray {
			 background-color: #efefef;
			 direction: rtl;
			 text-align: right;
			 color: #000
		 }

		.bg-gray h2 {
			text-align: center
		}

		.bg-gray ul {
			background-color: #ddd;
			direction: rtl;
			text-align: right;
		}

		.bc-card {
			padding: 15px;
			border: 1px solid #000;
			text-align: center
		}

		.bc-card img {
			margin-bottom: 15px;
		}

		.nextline-row {
			margin-top: 30px;
		}

		.row label {
			min-height: 80px;
		}

		.product-title h3 {
			text-align: center !important;
			margin-bottom: 8px !important;
		}

		.gotodiscount {
			margin-top: 30px !important;
		}

		.gotodiscount a {
			font-size: 1.5rem
		}

		.gotodiscount i {
			margin: 0 30px !important;
		}

		.product-title .btn {
			padding: 12px !important;
			font-size: 1rem;
		}
		#discountsec h2 {
			text-align: center;
			color: #ED1C24;
			direction: rtl;
			margin-bottom: 40px;
		}
		section {
			padding: 40px 0;
		}
	</style>
	
	<meta property="og:title" content="@ViewBag.Title" />
	<meta property="og:url" content="https://www.mashadleather.com/WinterPromotion" />
	<meta property="og:image" content="https://www.mashadleather.com/images/logo.png" />
	<meta property="og:description" content="از 15 تا 50 درصد تخفیف ویژه برای کلیه محصولات در جشنواره زمستانه چرم مشهد" />
}
@section scripts{
	<script src="~/Scripts/UI/plugins/components/particles-animation.js"></script>
	<script src="~/Scripts/UI/plugins/components/particles.js"></script>
	
	<script>
		$(document).ready(function () {
			var sss = '@TempData["success"]';
			if (sss!== '') {
				alert(sss);
			}
			var InvalidEmail = '@TempData["InvalidEmail"]';
			if (InvalidEmail!== '') {
				alert(InvalidEmail);
			}
			var WrongCellNumber = '@TempData["WrongCellNumber"]';
			if (WrongCellNumber!== '') {
				alert(WrongCellNumber);
			}
		});
	</script>
}
<section id="page-title" data-parallax-image="/images/mashad-faq-img.jpg">
	<div id="particles-js" class="particles" style="background: none"></div>
	<div class="container">
		<div class="slide-captions text-center text-light about-caption">
		 <label>@ViewBag.Title</label>
		</div>
	</div>
</section>
<section class="bg-gray">
	<div class="container">
		<div class="row ">
			<div class="col-md-12">
				<div>
					<h2>
					فروش ویژه بهمن ماه چرم مشهد آغاز شد.
					</h2>
					<div class="row">
						<div class="col-md-12">
							<h3>
								جشنواره رنگی چرم مشهد به صورت هماهنگ در تمام فروشگاه های چرم مشهد و فروشگاه اینترنتی برگزار می شود.
							</h3>
						</div>
					</div>

			 
					<div class="gotodiscount">
						<a class="btn fullwidth" href="#discountsec"><i class="fa fa-angle-down"></i>مشاهده تخفیفات<i class="fa fa-angle-down"></i></a>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

