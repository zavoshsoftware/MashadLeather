@model ViewModels.ProductListViewModel
@{
   
    Layout = "~/Views/Shared/FrontEndLayout/_FrontEndLayout.cshtml";
}

<section id="page-title" data-parallax-image="/images/mashad-faq-img.jpg">
    <div class="container">
        <div class="page-title">
            <h1>@ViewBag.Title</h1>
            @*<span>@Model.ProductCategory.Description</span>*@
        </div>
    </div>
</section>
<!-- end: Page title -->
<!-- Shop products -->
<section>
    <div class="container">
        <div class="row m-b-20"></div>
        <!--Product list-->
        <div class="shop">
            <div class="grid-layout grid-4-columns" data-item="grid-item">
                @foreach (var product in Model.Products)
                {
                    <div class="grid-item">
                        <div class="product">
                            <div class="product-image">
                                <img alt="Shop product image!" src="@product.ImageUrl">
                               <div class="product-overlay">
                                    <a href="/productQuiockView/@product.Id" data-lightbox="ajax">مشاهده سریع</a>

                                </div>
                            </div>

                            <div class="product-description">
                                <div class="product-category">@product.ProductCategoryTitle</div>
                                <div class="product-title">
                                    <h3>
                                        <a href="#">@product.Title</a>
                                    </h3>
                                </div>
                                <div class="product-price">
                                    <ins>@product.Amount</ins>
                                    ریال
                                </div>

                            </div>
                        </div>
                    </div>

                }

            </div>
            <hr>
            <!-- Pagination -->
            <div class="pagination">
                <ul>
                    <li>
                        <a href="#" aria-label="Previous"> <span aria-hidden="true"><i class="fa fa-angle-left"></i></span> </a>
                    </li>
                    <li><a href="#">1</a> </li>

                    <li>
                        <a href="#" aria-label="Next"> <span aria-hidden="true"><i class="fa fa-angle-right"></i></span> </a>
                    </li>
                </ul>
            </div>
            <!-- end: Pagination -->
        </div>
    </div>
</section>
<!-- end: Shop products -->


<section class="background-grey p-t-40 p-b-0">
    <div class="container" style="direction:ltr;">
        <div class="row">
            <div class="col-md-3">
                <div class="icon-box effect small clean">
                    <div class="icon">
                       <i class="fa fa-gift"></i>
                    </div>
                    <h3>ارسال رایگان به سراسر ایران</h3>
                    <p>برای سفارشات بالای 200 هزار تومان</p>
                </div>
            </div>

            <div class="col-md-3">
                <div class="icon-box effect small clean">
                    <div class="icon">
                       <i class="fa fa-plane"></i>
                    </div>
                    <h3>بازگشت کالا</h3>
                    <p>24 ساعت گارانتی بازگشت کالا و 6 روز گارانتی تعویض</p>
                </div>
            </div>

            <div class="col-md-3">
                <div class="icon-box effect small clean">
                    <div class="icon">
                        <i class="fa fa-history"></i>
                    </div>
                    <h3>خدمات مشتریان</h3>
                    <p>پاسخگوی تمامی پرسش های شما</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="icon-box effect small clean">
                    <div class="icon">
                       <i class="fa fa-history"></i>
                    </div>
                    <h3>فروشگاه ها</h3>
                    <p>نمایندگی های ما را بر روی نقشه بیابید</p>
                </div>
            </div>
        </div>
    </div>
</section>


