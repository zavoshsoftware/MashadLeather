
@model ViewModels.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en" class="bg-dark">
<head>
    
    <meta name="viewport" content="width=device-width"/>
    <title>ورود</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"/>
    <link href="~/Content/Admin/app.v2.min.css" rel="stylesheet"/>
    <link href="~/Content/UI/FontStyle.css" rel="stylesheet" />
    <style>
     
        .input-group {
            direction: rtl;
        }

        .input-group-addon:first-child {
            border-right: #e1e1e1 1px solid;
        }

        .form-group {
            text-align: right;
        }
        .form-control {
            text-align: right;
        }

    </style>
</head>
<body>
    <section id="content" class="m-t-lg wrapper-md animated fadeInUp">
        <div class="container aside-xxl">
            <a class="navbar-brand block" href="/">چرم مشهد</a>
            <section class="panel panel-default bg-white m-t-lg login">
                <header class="panel-heading text-center">
                    <strong>ورود</strong>
                </header>

                @if (TempData["WrongPass"] != null)
                {
                    <p class="alert alert-danger" id="wrongEmail">@TempData["WrongPass"]</p>
                }

                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "panel-body wrapper-lg", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "alert-danger" })
                    @*@Html.ValidationMessage("invalid", new { @class = "alert-danger" })*@
                    <div class="form-group">
                        @*<label class="control-label">تلفن همراه</label>*@
                        @Html.LabelFor(model => model.Username, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control input-lg", @placeholder = Html.DisplayNameFor(model => model.Username) })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", @placeholder = Html.DisplayNameFor(model => model.Password) })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary col-md-12">ورود</button>
                    </div>


                }
            </section>
        </div>
    </section> <!-- footer -->
    <footer id="footer">
        <div class="text-center padder">
            <p>
            </p>
        </div>
    </footer> <!-- / footer -->
    <script src="~/Scripts/Admin/app.v2.js"></script>

</body>
</html>