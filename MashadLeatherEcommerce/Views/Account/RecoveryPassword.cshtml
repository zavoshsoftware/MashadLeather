@model ViewModels.RecoveryPasswordViewModel
@{
    ViewBag.Title = "بازیابی کلمه عبور";
    Layout = "~/Views/Shared/FrontEndLayout/_FrontEndLayout.cshtml";
}

<section id="page-title" data-parallax-image="/images/mashad-faq-img.jpg">
    <div class="container">
        <div class="page-title">
            <h1>بازیابی کلمه عبور</h1>
            <span>جهت بازیابی کلمه عبور شماره موبایل خود را وارد نمایید</span>
        </div>

    </div>
</section>
<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3 recoverypass-page">
                <h2 class="text-center">بازیابی کلمه عبور</h2>

                @if (TempData["WrongCellNumber"] != null)
                {
                    <p class="alert alert-danger" id="wrongEmail">@TempData["WrongCellNumber"]</p>
                } 
                @if (TempData["success"] != null)
                {
                    <p class="alert alert-success" id="wrongEmail">@TempData["success"]</p>
                } 
            @using (Html.BeginForm("recoveryPassword", "Account", null, FormMethod.Post, new {@class = "", role = "form"}))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new {@class = "alert-danger"})


                <div class="form-group">
                    <p class="center">جهت بازیابی کلمه عبور شماره موبایل خود را وارد نمایید</p>
                     
                    @Html.TextBoxFor(m => m.CellNumber, new {@class = "form-control form-white", @placeholder = "شماره موبایل"})

                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-default">بازیابی کلمه عبور</button>
                </div>
            
            }
                
                

               
            </div>
        </div>
    </div>
</section>
