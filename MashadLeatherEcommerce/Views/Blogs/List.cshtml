@model ViewModels.BlogListViewModel

@{
		ViewBag.Title = Model.BlogGroup.TitleSrt +" چرم مشهد";
		Layout = "~/Views/Shared/FrontEndLayout/_FrontEndLayout.cshtml";
		ViewBag.Canonical = "https://www.mashadleather.com/blog/" + Model.BlogGroup.UrlParam;
}


<section id="page-title" data-parallax-image="/images/newsheader.jpg" style="background-color:#7391ac; min-height:550px;">
	<div id="particles-js" class="particles" style="background: none"></div>
	<div class="container">
		<div class="page-title">
			<h1 style="font-size:@ViewBag.FontSize !important;">@Model.BlogGroup.TitleSrt @Resources.Label.MashadLeather</h1>
		</div>
	</div>
</section>


